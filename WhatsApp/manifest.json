{ 
   "manifest_version": 2, 
   "name": "WhatsApp Sidebar", 
   "version": "1.0", 
   "description": "Open WhatsApp Web in the Firefox sidebar", 
   "icons": { 
      "48": "icons/whatsapp-48.png" 
   }, 
   "applications": {
      "gecko": {
        "id": "whatsapp@example.com"
      }
    },
   "sidebar_action": {
      "default_icon": "icons/whatsapp-48.png",
      "default_title" : "Whatsapp",
      "default_panel": "whatsapp-sb.htm"
  },
  "permissions": ["storage"]
}